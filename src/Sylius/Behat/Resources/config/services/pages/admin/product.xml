        </service>
        <service id="sylius.behat.page.admin.product.update_configurable" class="%sylius.behat.page.admin.product.update_configurable.class%" parent="sylius.behat.page.admin.crud.update" scope="scenario" public="false">
            <argument type="string">product</argument>
        </service>
        <service id="sylius.behat.page.admin.product.update_simple" class="%sylius.behat.page.admin.product.update_simple.class%" parent="sylius.behat.page.admin.crud.update" scope="scenario" public="false">
            <argument type="string">product</argument>
        </service>
